#!/usr/bin/env bash

command=$1
libexec="/usr/libexec/is/"
PATH="$PATH:$libexec"

check()
{
  if [ "$1" == "" ]; then
    echo "Argument 2 required";
    exit 1;
  fi;
}

has()
{
  if [ "$2" == "" ]; then
    echo "yes"
  else
    echo "no"
  fi;
}

badcommand()
{
    echo "Bad command";
    exit 2;
}

case "$command" in
  init)
    is-init
  ;;
  clean)
    is-clean
  ;;
  add-library)
    check $2
    is-add-library $2
  ;;
  add-company-library)
    check $2
    is-add-company-library $2
  ;;
  *)
    if [ `has 6 $6` == "no" ]; then
      is-compile-library $2 $3 $4 $5 $6 $7
    elif [ `has 2 $2` == "no" ]; then
      is-compile-binary $2 $3
    else
      badcommand
    fi;
  ;;
esac
exit 0;
